@model Workpaces.Models.Sala

@{
    ViewBag.Title = "Eliminar Sala";
}
<body >
    <h2>Eliminar</h2>

    <h3>Are you sure you want to delete this?</h3>
    <div>
        <h4>Sala</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Nombre)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Capacidad)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Capacidad)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.Ubicacion)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.DisponibilidadEquipo)
            </dt>
            <dd>
                @Html.DisplayFor(model => model.DisponibilidadEquipo)
            </dd>

            <dt>
                @Html.DisplayNameFor(model => model.Estado)
            </dt>
            <dd>
                @if (Model.Estado)
                {
                    <span class="badge bg-success">Disponible</span>
                }
                else
                {
                    <span class="badge bg-danger">Ocupada</span>
                }
            </dd>
        </dl>

        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            <br><br>
            <div class="form-actions no-color">
                <input type="submit" value="Eliminar" class="btn btn-danger" /> |
                @Html.ActionLink("Back to List", "Index", null, new { @class = "btn btn-secondary" })
            </div>
        }
    </div>
    </body>