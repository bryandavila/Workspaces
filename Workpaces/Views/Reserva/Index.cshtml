@model IEnumerable<Workpaces.Models.Reserva>

@{
    ViewBag.Title = "Lista de reservaciones";
}
<body style="text-align: center;">
    <h2>Lista de reservaciones</h2>

    <p style="text-align: left;">
        @Html.ActionLink("Nueva reservación", "Create", null, new { @class = "btn btn-primary" })
        @if (User.IsInRole("Admin"))
        {
            <a href="@Url.Action("VerReservas", "Admin")" class="btn btn-secondary">Administrar Reservas</a>
        }
    </p>
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Fecha)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraInicio)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HoraFin)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Sala.Nombre)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Usuario.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Estado)
                </th>
                @if (User.IsInRole("Admin"))
                {
                    <th>Acciones</th>
                }
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                   
                    @item.Fecha.ToString("yyyy-MM-dd")
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraInicio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HoraFin)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sala.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Usuario.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Estado)
                </td>
                @if (User.IsInRole("Admin"))
                {
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.IdReserva }, new { @class = "btn btn-warning btn-sm" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.IdReserva }, new { @class = "btn btn-danger btn-sm" })
                    </td>
                }
            </tr>
        }

    </table>
</body>
