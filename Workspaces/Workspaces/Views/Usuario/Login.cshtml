@model Workspaces.Usuario

@{
    ViewBag.Title = "Login";
}

<div class="container my-5 d-flex justify-content-center">
    <div class="card p-5 shadow-lg" style="width: 400px; border-radius: 15px;">
        <h2 class="text-center mb-4">Iniciar sesión</h2>

        @using (Html.BeginForm("Login", "Usuario", FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <div class="form-group">
                @Html.TextBox("correo", null, new { @class = "form-control", placeholder = "Correo", style = "border-radius: 10px;" })
                @Html.ValidationMessage("correo", "", new { @class = "text-danger" })
            </div>

            <div class="form-group mt-3">
                <input type="password" name="contrasena" class="form-control" placeholder="Contraseña" style="border-radius: 10px;" />
                @Html.ValidationMessage("contrasena", "", new { @class = "text-danger" })
            </div>

            <div class="text-center mt-4">
                <button type="submit" class="btn btn-primary" style="border-radius: 10px; padding: 10px 20px; width: 100%;">Ingresar</button>
            </div>
        }

        @if (ViewBag.ErrorMessage != null)
        {
            <div class="alert alert-danger mt-3 text-center">
                @ViewBag.ErrorMessage
            </div>
        }

        <div class="text-center mt-3">
            <a href="@Url.Action("Registro", "Usuario")" class="small">¿No tienes una cuenta? Regístrate</a>
            <br />
            <a href="@Url.Action("ForgotPassword", "Usuario")" class="small">He olvidado mi contraseña</a>
        </div>
    </div>
</div>
